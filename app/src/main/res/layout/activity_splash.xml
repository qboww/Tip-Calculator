<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_onTertiaryContainer">

    <TextView
            android:id="@+id/textViewSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by Yevhenii Sarancha"
            android:textColor="@color/md_theme_light_onError"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:fontFamily="monospace"
            android:typeface="monospace"
            android:lineSpacingExtra="8sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerInParent="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="170dp"
            android:layout_above="@+id/textViewSplash"
            android:layout_marginBottom="56dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"/>

</RelativeLayout>